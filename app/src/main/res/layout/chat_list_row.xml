<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:text="@string/sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/senderRowTV"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:textSize="@dimen/cast_expanded_controller_control_button_margin"/>

    <TextView
        android:text="@string/message"
        android:textSize="@dimen/cast_expanded_controller_margin_between_status_text_and_seek_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/senderRowTV"
        android:layout_toEndOf="@+id/senderRowTV"
        android:layout_marginStart="80dp"
        android:id="@+id/messageRowTV" />
</LinearLayout>